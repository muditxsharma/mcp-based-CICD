# Shared env for docker compose (copy to .env)
PROJECT_NAME=mcp-release-control-plane

# GitHub
GITHUB_TOKEN=ghp_your_token_here
GITHUB_ORG=your-org
GITHUB_SHARED_WORKFLOW_REPO=shared-ci

# Docker Registry (OCI)
REGISTRY_BASE_URL=http://registry:5000
REGISTRY_USERNAME=
REGISTRY_PASSWORD=

# Kubernetes
KUBECONFIG=/kube/config

# Ollama (optional free LLM)
OLLAMA_BASE_URL=http://host.docker.internal:11434
OLLAMA_MODEL=llama3.1:8b

# Safety
ALLOW_WRITE_ACTIONS=false
